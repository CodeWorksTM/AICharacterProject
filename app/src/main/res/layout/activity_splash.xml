<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  style="@style/activityDefault"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".layout.activity.ACSplashActivity">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/logoConstraintLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/lottieView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
      android:id="@+id/mainLogoImageView"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:contentDescription="@string/image_content_description"
      android:src="@drawable/ic_main_logo_black"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/textView"
      style="@style/customTextViewColorMedium"
      android:layout_width="0dp"
      android:layout_height="30dp"
      android:layout_marginStart="15dp"
      android:text="My AI Character"
      android:textSize="25sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toEndOf="@+id/mainLogoImageView"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/textView1"
      style="@style/customSubTextViewColorMedium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="Let's Meet My Own AI Character!"
      android:textSize="12sp"
      app:layout_constraintStart_toStartOf="@+id/textView"
      app:layout_constraintTop_toBottomOf="@+id/textView"/>
  </androidx.constraintlayout.widget.ConstraintLayout>

  <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/lottieView"
    android:layout_width="0dp"
    android:layout_height="120dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_rawRes="@raw/lottie_animation_loading"/>
</androidx.constraintlayout.widget.ConstraintLayout>