<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AICharacterProject" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_1</item>
        <item name="colorPrimaryVariant">@color/orange_2</item>
        <item name="colorOnPrimary">@color/black_org</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_1</item>
        <item name="colorSecondaryVariant">@color/orange_2</item>
        <item name="colorOnSecondary">@color/black_org</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Handle color -->
        <item name="colorControlActivated">@color/orange_1</item>
    </style>

    <!-- Activity default style -->
    <style name="activityDefault" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/white_org</item>
    </style>

    <!--====================================== TextView Style ======================================-->
    <style name="customTextViewColorBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_org</item>
        <item name="android:fontFamily">@font/esamanru_bold</item>
    </style>
    <style name="customTextViewColorMedium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_org</item>
        <item name="android:fontFamily">@font/esamanru_medium</item>
    </style>
    <style name="customTextViewColorLight" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black_org</item>
        <item name="android:fontFamily">@font/esamanru_light</item>
    </style>

    <style name="customSubTextViewColorBold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:fontFamily">@font/esamanru_bold</item>
    </style>
    <style name="customSubTextViewColorMedium" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:fontFamily">@font/esamanru_medium</item>
    </style>
    <style name="customSubTextViewColorLight" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:fontFamily">@font/esamanru_light</item>
    </style>
    <!--============================================================================================-->
</resources>